{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "./build",
    "rootDir": "./public",
    "noEmit": false,
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "public/electron.ts",
    "public/preload.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src"
  ]
}
